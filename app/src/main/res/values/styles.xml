<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ACTIVITIES-->
    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.WhiteRipple">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="FlatDeleteListButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/aquamarine</item>
        <item name="android:theme">@style/AppTheme.WhiteRipple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="Caption1DarkGray">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/tenx_black_darker</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>


    <style name="NavHeaderText">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="NavTextColorInActive">
        <item name="android:textColor">@color/dim_gray</item>
        <item name="android:fontFamily">@font/open_sans_family</item>
    </style>

    <style name="openSans">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSans_Bold">
        <item name="android:fontFamily">@font/open_sans_bold_family</item>
    </style>

    <!--NAV-->
    <style name="NavTextColorActivePlanner" parent="OpenSans_Bold">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="NavTextColorActiveCalendar" parent="OpenSans_Bold">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NavTextColorActiveGoals" parent="OpenSans_Bold">
        <item name="android:textColor">@color/salmon</item>
    </style>

    <style name="NavTextColorActiveWork" parent="OpenSans_Bold">
        <item name="android:textColor">@color/fire_brick</item>
    </style>

</resources>
