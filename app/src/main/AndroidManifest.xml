<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.searoth.template">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:name=".infrastructure.TemplateApplication"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".infrastructure.ui.home.HomeActivity"
                  android:screenOrientation="sensorPortrait"
                  android:theme="@style/HomeActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".infrastructure.ui.planets.PlanetsActivity"
                  android:screenOrientation="sensorPortrait"
                  android:theme="@style/HomeActivityTheme"/>

        <activity android:name=".infrastructure.ui.weather.WeatherActivity"
                  android:screenOrientation="sensorPortrait"
                  android:theme="@style/HomeActivityTheme"/>

        <activity android:name=".infrastructure.ui.notification.NotificationActivity"
                  android:screenOrientation="sensorPortrait"
                  android:theme="@style/HomeActivityTheme"/>

        <activity android:name=".infrastructure.ui.features.profile.ProfileActivity"
                  android:screenOrientation="sensorPortrait"
                  android:theme="@style/HomeActivityTheme"/>















    </application>

</manifest>